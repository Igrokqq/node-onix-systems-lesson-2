{
    "extends": ["airbnb-base/legacy", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true
            }
        ],
        "max-len": ["error", {
            "code": 80,
            "ignoreStrings": true,
            "ignoreComments": true
        }],
        "strict": 0,
        "no-var": "error",
        "no-console": 0,
        "quotes": [
            "error",
            "single"
        ],
        "no-shadow": "warn",
        "no-process-exit": "warn",
        "no-return-await": "off",
        "no-unused-vars": "warn"
    }
}
